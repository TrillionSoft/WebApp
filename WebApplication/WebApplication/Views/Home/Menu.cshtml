@model WebApplication.Domain.ProductCategoryDOM


<div class="w3-padding-64 w3-large w3-text-grey" style="font-weight:bold">
    @{
        List<string> Type = new List<string>();
        List<string> SubType = new List<string>();
        Type = Model.Type;
        SubType = Model.Description;

        for (int i = 0; i < Type.Count(); i++)
        {
            if (SubType[i] == "")
            {
                <a href="#" class="w3-bar-item w3-button">@Type[i]</a>
            }

            else if (SubType[i - 1] == "")
            {
                string Btn = Type[i] + "_Btn";
                string Demo = Type[i] + "_Demo";
                <a onclick="myAccFunc('@Type[i]')" href="javascript:void(0)" href="javascript:void(0)"  class="w3-button w3-block w3-white w3-left-align" id="@Btn">@Type[i] <i class="fa fa-caret-down"></i></a>

                <div id="@Demo" class="w3-bar-block w3-hide w3-padding-large w3-medium">
                <a href="#" class="w3-bar-item w3-button w3-light-grey"><i class="fa fa-caret-right w3-margin-right"></i>@SubType[i]</a>
                    @{
                                    int count = Type.Count() - (i + 1);
                                    i++;
                                    for (int y = 0; y < count; y++)
                                    {
                                        if (SubType[i] != "")
                                        {
                                <a href="#" class="w3-bar-item w3-button">@SubType[i]</a>
                                i++;
                            }

                            else
                            {
                                i--;
                                break;

                            }
                        }
                    }
</div>
            }
        }
    }
</div>



