@using PagedList
@using PagedList.Mvc
@model IPagedList<WebApplication.Models.Product_Category>

<main>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th width="300px">Type</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <tr>
                @foreach (var s in Model)
                {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.Type</td>
                    <td>@s.Description</td>
                    <td class='select'>
                        <a class="button1" onclick="location.href='@Url.Action("EditCategory", "Admin", new { id = s.ID })'">Edit <i class="fa fa-pencil" style="padding-left:10px"></i></a>
                        <a class="button1">Delete <i class="fa fa-recycle" style="padding-left:10px"></i></a>

                    </td>
                </tr>
                }
                </tr>
            </tbody>
        </table>
    @{ 
        var options = PagedListRenderOptions.Classic;
        //options.LinkToFirstPageFormat = ">";
        //options.LinkToLastPageFormat = "Last";
        options.LinkToPreviousPageFormat = "<";
        options.LinkToNextPageFormat = ">";

        var ajaxOption = new AjaxOptions { UpdateTargetId = "target", OnSuccess = "highlight" };
    }   
          @Html.PagedListPager(Model, n => "?page=" + n + "&Type="+Request.QueryString["Type"], PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(options, ajaxOption))
        @*<p>
            Page @Model.PageNumber of @Model.PageCount<br />
            Showing @Model.Count of @Model.TotalItemCount record(s)<br />
            From record @Model.FirstItemOnPage to @Model.LastItemOnPage<br />
        </p>*@
    </main>

    <style>

        html {
            font-size: 62.5%;
        }

        main {
            padding: 20px;
        }

        table {
            background-color: #2C3845;
            display: block;
            padding: 40px;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            color: #fff;
            font-size: 1.6rem;
            font-family: 'Lato', sans-serif;
        }

        tr, td, tbody, tfoot {
            display: block;
            text-align: center;
        }

        thead {
            display: none;
        }

        tr {
            padding-bottom: 10px;
        }

        td {
            padding: 10px 10px 0;
            text-align: center;
        }

            td:before {
                content: attr(data-title);
                color: #7a91aa;
                text-transform: uppercase;
                font-size: 1.4rem;
                padding-right: 10px;
                display: block;
            }

        table {
            width: 100%;
        }

        th {
            text-align: left;
            font-weight: 700;
        }

        thead th {
            background-color: #202932;
            color: #fff;
            border: 1px solid #202932;
        }

        tfoot th {
            display: block;
            padding: 10px;
            text-align: center;
            color: #b8c4d2;
        }

        .button1 {
            line-height: 1;
            display: inline-block;
            font-size: 1.2rem;
            text-decoration: none;
            border-radius: 5px;
            color: #fff;
            padding: 8px;
            background-color: #4b908f;
            cursor: pointer;
        }

        .select {
            width: 200px;
            border-bottom: 1px solid #28333f;
        }

            .select:before {
                display: none;
            }

        @@media (min-width: 460px) {
            td {
                text-align: left;
            }

                td:before {
                    display: inline-block;
                    text-align: right;
                    width: 140px;
                }

            .select {
                padding-left: 160px;
            }
        }

        @@media (min-width: 720px) {
            table {
                display: table;
            }

            tr {
                display: table-row;
            }

            td, th {
                display: table-cell;
            }

            tbody {
                display: table-row-group;
            }

            thead {
                display: table-header-group;
            }

            tfoot {
                display: table-footer-group;
            }

            td {
                border: 1px solid #28333f;
            }

                td:before {
                    display: none;
                }

            td, th {
                padding: 10px;
            }

            tr:nth-child(2n+2) td {
                background-color: #242e39;
            }

            tfoot th {
                display: table-cell;
            }

            .select {
                padding: 10px;
            }
        }
    </style>

